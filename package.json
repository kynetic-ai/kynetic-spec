{
  "name": "@kynetic-ai/spec",
  "version": "0.1.2",
  "description": "Kynetic Spec - Structured specification format for human-AI collaboration",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "kspec": "./dist/cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kynetic-ai/kynetic-spec.git"
  },
  "homepage": "https://github.com/kynetic-ai/kynetic-spec#readme",
  "bugs": {
    "url": "https://github.com/kynetic-ai/kynetic-spec/issues"
  },
  "author": "Kynetic AI",
  "scripts": {
    "build": "tsc && chmod +x dist/cli/index.js",
    "dev": "tsx src/cli/index.ts",
    "setup:dev": "npm install && npm run build && npm link",
    "pretest": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check src/",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "js-yaml": "^4.1.0",
    "ulid": "^2.3.0",
    "yaml": "^2.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@agentclientprotocol/sdk": "^0.13.0",
    "@biomejs/biome": "2.3.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "autoprefixer": "^10.4.23",
    "clsx": "^2.1.1",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.17"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "specification",
    "requirements",
    "yaml",
    "cli",
    "ai",
    "agent"
  ],
  "license": "MIT"
}
